<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardView"
    app:cardElevation="@dimen/cardview_default_radius"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/groupTitle"
            android:text="第一组"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/my_margin"
            android:layout_marginLeft="@dimen/my_margin"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"/>
        <TextView android:id="@+id/groupTime"
            android:text="9月17日 12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="@dimen/text_margin"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_alignStart="@id/groupTitle"
            android:layout_alignLeft="@id/groupTitle"
            android:layout_below="@+id/groupTitle"
            />
        <TextView android:id="@+id/groupLocation"
            android:text="A4-201"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_alignStart="@id/groupTime"
            android:layout_alignLeft="@id/groupTime"
            android:layout_below="@id/groupTime"/>
        <TextView android:id="@+id/groupState"
            android:text="正在签到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:gravity="center_vertical"
            android:layout_below="@+id/groupLocation"
            android:layout_alignStart="@id/groupTime"
            android:layout_alignLeft="@id/groupTime"
            android:layout_marginTop="@dimen/my_margin"
            android:layout_marginBottom="@dimen/my_margin"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>